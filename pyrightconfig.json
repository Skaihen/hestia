{
	// Install LSP-json to get validation and autocompletion in this file.
	"include": [
    	"src",
    	"tests"
  	],
  	"standard": [
        "src"
    ],
  
	"exclude": [
		"**/node_modules",
		"**/__pycache__",
		"src/experimental",
		"src/typestubs"
	],

	"ignore": [
		"src/oldstuff"
	],

	"defineConstant": {
		"DEBUG": true
	},

	"stubPath": "src/stubs",

    "typeCheckingMode": "strict",
    "reportMissingTypeStubs": "none",
    "reportUnknownMemberType": "none",

	"venvPath": ".",
	"venv": "venv",
}
